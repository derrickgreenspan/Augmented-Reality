<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:clickable="false"
    android:background="@drawable/dragon_radar_v">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startbutton"
        android:background="@drawable/start_button"
        android:contentDescription="@string/startbutton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="startGame"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:background="@drawable/dragon_ball_z_logo"
        android:contentDescription="@string/logo"
        android:layout_above="@+id/startbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/difficultybutton"
        android:layout_below="@+id/startbutton"
        android:layout_alignRight="@+id/startbutton"
        android:layout_alignEnd="@+id/startbutton"
        android:layout_marginTop="40dp"
        android:background="@drawable/difficulty_button"
        android:contentDescription="@string/difficultybutton"
        android:clickable="true"
        android:onClick="launchDifficutlyScreen"/>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exitbutton"
        android:layout_below="@+id/difficultybutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:background="@drawable/exit_button"
        android:contentDescription="@string/exitbutton"
        android:clickable="true"
        android:onClick="Exit"/>

</RelativeLayout>
